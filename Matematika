public class Matematika {
    private int tambah;
    private int kali;
    private int kurang;
    private int bagi;
    
    public int gettambah(int a, int b){
        return a + b;
    }
        public int getkali(int a, int b){
            return a * b;
        }
        public int getkurang(int a, int b){
            return a - b;
        }
        public int getbagi(int a, int b){
            if(b==0){
            System.out.println(" eror dalam perhitungan ");
            return 0;
        }
        return a/b;
        }
}

